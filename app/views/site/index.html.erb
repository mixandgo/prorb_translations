<div class="mt-8 prose">
  <h1><%= translate(".heading") %></h1>

  <div class="w-full max-w-xs">
    <%= form_with url: false, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 border" do |f| %>
      <div class="mb-4">
        <%= f.label :username, class: "label" %>
        <%= f.text_field :username, class: "input" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input" %>
        <p class="text-red-500 text-xs italic">Please choose a password.</p>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Sign in", class: "button" %>
        <%= link_to "Forgot password?", "", class: "link" %>
      </div>
    <% end %>
    <p class="text-center text-gray-500 text-xs">
      <%= translate(".form_footer", year: Date.current.year) %>
    </p>
  </div>
</div>
