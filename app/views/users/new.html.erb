<div class="mt-8 prose">
  <h1><%= translate(".heading") %></h1>
  <%= link_to t(".english"), root_path(locale: :en) %> |
  <%= link_to t(".foobar"), root_path(locale: :foobar) %>

  <div class="w-full max-w-xs">
    <%= form_with model: @user, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 border" do |f| %>
      <% if @user.errors.any? %>
        <div class="rounded bg-rose-100 p-2 mb-4">
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <%= hidden_field_tag :locale, params[:locale] %>
      <div class="mb-4">
        <%= f.label :username, class: "label" %>
        <%= f.text_field :username, class: "input" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input" %>
        <p class="text-red-500 text-xs italic"><%= translate(".info") %></p>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit nil, class: "button" %>
        <%= link_to t(".forgot_password"), "", class: "link" %>
      </div>
    <% end %>
    <p class="text-center text-gray-500 text-xs">
      <%= translate(".form_footer", year: Date.current.year) %>
    </p>
  </div>
</div>
